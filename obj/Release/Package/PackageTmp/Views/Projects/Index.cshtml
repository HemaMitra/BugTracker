@model IEnumerable<BugTracker.Models.Projects>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if(User.IsInRole("Admin"))
    { 
        @Html.ActionLink("Create New project", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>Project Name
            @*@Html.DisplayNameFor(model => model.ProjectName)*@
        </th>
        <th>Archieved
            @*@Html.DisplayNameFor(model => model.ProjectArchieved)*@
        </th>
    </tr>

@foreach (var item in Model) {

    if(User.IsInRole("Admin"))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectArchieved)
            </td>
        </tr>
    }
    else
    {
        if(item.ProjectArchieved == false)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectArchieved)
                </td>
            </tr>
        }
     }
}

</table>
