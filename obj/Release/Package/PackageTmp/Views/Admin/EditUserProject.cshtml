@model BugTracker.Models.UserProjectModel
@{
    ViewBag.Title = "Edit User Project";
}

<h2>Assign users To Projects</h2>

<form action="@Url.Action("EditUserProject", new { projectId = Model.Project.Id})" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <br><br>
    <div class="row">
        <div class="col-md-5">
            Project Name
        </div>
        <div class="col-md-7">
            @Html.DisplayFor(model => model.Project.ProjectName) 
        </div>
    </div>
    <br><br>
    
    <div class="row">
        <div class="col-md-5">
            Users
        </div>
        <div class="col-md-7">
            All Users<span class="col-md-offset-4">Selected Users</span>
            @Html.ListBoxFor(model => model.SelectedUsers, Model.ApplicationUser, 
            new { @class = "form-control", id = "my-select", name = "my-select[]" })
        </div>
    </div>

    <div class="row">
        <input type="submit" value="Submit" class="btn btn-sm btn-primary" />
    </div>

</form>
@section Scripts
{
    <script type="text/javascript">
        $('#my-select').multiSelect();
    </script>
}
