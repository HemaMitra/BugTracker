@model BugTracker.Models.AdminViewModel
@{
    ViewBag.Title = "EditUserRole";
}

<h2>Edit User Role</h2>

<form action="@Url.Action("EditUserRole", new { userId = Model.User.Id })" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <br><br>
    <div class="row">
        <div class="col-md-5">
            @Html.LabelFor(model => model.User)
        </div>
        <div class="col-md-7">
            @Html.DisplayFor(model => model.User.UserName) 
        </div>
    </div>
    <BR><BR>
    <div class="row">
        <div class="col-md-5">
            @Html.LabelFor(model => model.Roles)
        </div>
        <div class="col-md-7">
            All Roles<span class="col-md-offset-3">Selected Roles</span>
            @Html.ListBoxFor(model => model.SelectedRoles, Model.Roles, new { @class = "form-control", id = "my-select" , name="my-select[]"})
            
        </div>
    </div>

    <div class="row">
        <input type="submit" value="Submit" class="btn btn-sm btn-primary" />
        <a href="@Url.Action("AdminIndex","Admin")" class="btn btn-sm btn-primary">Back</a>
    </div>

</form>
@section Scripts
{
    <script type="text/javascript">
        $('#my-select').multiSelect();
    </script>
}
