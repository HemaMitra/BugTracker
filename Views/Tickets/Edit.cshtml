@model BugTracker.Models.Tickets
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Edit";
    
}
<br>
<h2>Edit Ticket</h2>
<hr />
<div class="col-sm-offset-10">
    @Html.ActionLink("Back to List", "Index")
    
</div>
<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <br>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <input type="hidden" name="Created" value="@Model.Created">
                <input type="hidden" name="ProjectId" value="@Model.ProjectId">
                <input type="hidden" name="Title" value="@Model.Title">
                <input type="hidden" name="OwnerUserId" value="@Model.OwnerUserId">
                <input type="hidden" name="Description" value="@Model.Description">
                

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-3 font-semi-bold">Title:</div>
                        <div class="col-md-5">@Model.Title</div>
                     </div>   
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-3 font-semi-bold">Project Name:</div>
                        <div class="col-md-5">
                            @Model.Project.ProjectName
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-3 font-semi-bold">Owner:</div>
                        <div class="col-md-5">
                            @Model.OwnerUser.FirstName
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-3 font-semi-bold">Description:</div>
                        <div class="col-md-5">
                            @Html.Raw(Model.Description)
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-3 font-semi-bold">Ticket Type:</div>
                        <div class="col-md-5">
                            @Html.DropDownList("TicketTypeId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TicketTypeId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-3 font-semi-bold">Ticket Priority:</div>
                        <div class="col-md-5">
                            @Html.DropDownList("TicketPriorityId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TicketPriorityId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-3 font-semi-bold">Ticket Status:</div>
                        <div class="col-md-5">
                            @Html.DropDownList("TicketStatusId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TicketStatusId, "", new { @class = "text-danger" })
                            
                        </div>
                    </div>
                </div>

                @if(User.IsInRole("ProjectManager") || User.IsInRole("Admin"))
                { 

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-offset-1 col-md-3 font-semi-bold">Assigned To:</div>
                        <div class="col-md-5">
                            @Html.DropDownList("AssignedToUserId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.AssignedToUserId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                }
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-sm btn-primary" />
                    </div>
                </div>
                
            </div>
        }
        </div>
     <div class="col-sm-5">
                @if (User.IsInRole("Admin") || (User.IsInRole("ProjectManager")) || (Model.AssignedToUserId == User.Identity.GetUserId()) || (Model.OwnerUserId == User.Identity.GetUserId()))
                {
                    <h4 class="col-sm-offset-1">Add Comment</h4>
                    <div id="comment-form" class="comment-form col-sm-offset-1">

                        <form action="@Url.Action("CreateComments")" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="ticketId" value="@Model.Id" />
                            <input type="hidden" name="userId" value="@User.Identity.GetUserId()" />
                            <input type="hidden" name="backUrl" value="Edit">
                            <span class="font-semi-bold">
                                Comment : </span><textarea class="form-control" rows="3" placeholder="Message" name="Comments"></textarea><br>
                            <span class="font-semi-bold">
                                Upload Image :
                                </span>
                                <input name="image" type="file" class="form-control" id="fileUpload" /><br><br>
                            <span class="font-semi-bold">
                                Uploaded Image Description : 
                                </span>
                                <textarea class="form-control" rows="3" placeholder="File Description" name="FileDesc"></textarea>
                                <br>
                                <div class="col-md-offset-5 col-md-10">
                                    <input type="submit" value="Submit" class="btn btn-sm btn-primary" />
                                </div>
</form>
                    </div>
                }
            </div>
</div>
       










