                                    <li class="bg-palette3">
                                        <a href="@Url.Action("Index","Projects")">
                                            <span class="menu-content block">
                                                <span class="menu-icon"><i class="block fa fa-desktop fa-lg"></i></span>
                                                <span class="text-white m-left-sm">All Projects</span>
                                            </span>
                                            <span class="menu-content-hover block">
                                                All projects
                                            </span>
                                        </a>
                                    </li>

                           @if(User.IsInRole("Admin"))
                           {
                            <li>
                                <a href="@Url.Action("EditProject","Admin")">
                                    <span class="menu-content block">
                                        <span class="menu-icon"><i class="block fa fa-desktop fa-lg"></i></span>
                                        <span class="text-white m-left-sm">Edit Project</span>
                                    </span>
                                    <span class="menu-content-hover block">
                                        Edit Project
                                    </span>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("ProjectList","Admin")">
                                    <span class="menu-content block">
                                        <span class="menu-icon"><i class="block fa fa-desktop fa-lg"></i></span>
                                        <span class="text-white m-left-sm">Assign Users</span>
                                    </span>
                                    <span class="menu-content-hover block">
                                        Assign Users To Project
                                    </span>
                                </a>
                            </li>
                           }
                           @if(User.IsInRole("ProjectManager"))
                           { 
                            <li>
                                <a href="@Url.Action("ProjectList","Admin")">
                                <span class="menu-content block">       
                                <span class="menu-icon"><i class="block fa fa-desktop fa-lg"></i></span>
                                <span class="text-white m-left-sm">Assign Users</span>
                                </span>
                                <span class="menu-content-hover block">
                                Edit Project
                                </span>
                                </a>
                            </li>
                           }


                           </ul>
                          </li>
                       
                         }
                                    
                        @if (Request.IsAuthenticated)
                        {
                            <li class="openable bg-palette3">
                                @*<a href="@Url.Action("Index","Tickets")">-->*@
                                <a href="#">
                                    <span class="menu-content block">
                                        <span class="menu-icon"><i class="block fa fa-list fa-lg"></i></span>
                                        <span class="text-white m-left-sm">Tickets</span>

                                    </span>
                                    <span class="menu-content-hover block">
                                        Tickets
                                    </span>
                                </a>
                                <ul class="submenu bg-palette4">

                                    <li>
                                        <a href="@Url.Action("Index","Tickets")">
                                            <span class="menu-content block">
                                                <span class="menu-icon"><i class="block fa fa-tags fa-lg"></i></span>
                                                <span class="text-white m-left-sm">All Tickets</span>
                                            </span>
                                            <span class="menu-content-hover block">
                                                All Tickets
                                            </span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Create","Tickets")">
