@model BugTracker.Models.UserProjectModel
@{
    ViewBag.Title = "Edit User Project";
}

<h2>Edit User Project</h2>

<form action="@Url.Action("EditUserProject", new { projectId = Model.Project.Id})" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-5">
            @Html.LabelFor(model => model.Project.ProjectName)
        </div>
        <div class="col-md-7">
            @Html.DisplayFor(model => model.Project.ProjectName) 
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            @Html.LabelFor(model => model.ApplicationUser)
        </div>
        <div class="col-md-7">
            @Html.ListBoxFor(model => model.SelectedUsers, Model.ApplicationUser, new { @class = "form-control"})
        </div>
    </div>

    <div class="row">
        <input type="submit" value="Submit" class="btn btn-sm btn-primary" />
    </div>

</form>
